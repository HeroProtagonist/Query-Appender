{
    "name": "Getting Started Example",
    "version": "1.0",
    "description": "Build an Extension",
    "manifest_version": 2,
    "browser_action": {
     "default_popup": "popup.html"
    },
    "background": {
      "scripts": [
        "storage.js",
        "background.js"
    ]},
    "permissions": [
      "webRequest",
      "webRequestBlocking",
      "tabs",
      "<all_urls>",
      "storage"
    ]
  }
