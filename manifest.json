{
    "name": "Getting Started Example",
    "version": "1.0",
    "description": "Build an Extension",
    "manifest_version": 2,
    "browser_action": {
     "default_popup": "popup.html"
    },
    "background": {
      "scripts": [
        "storage.js",
        "background.js"
    ]},
    "permissions": [
      "webRequest",
      "webRequestBlocking",
      "tabs",
      "<all_urls>",
      "storage"
    ],
    "icons": {
      "16": "static/logo16.png",
      "48": "static/logo48.png",
      "128": "static/logo128.png"
    }
  }
